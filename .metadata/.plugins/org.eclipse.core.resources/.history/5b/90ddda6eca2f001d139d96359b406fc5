package robotito;

public class Main {

    public static void main(String[] args) {
	
	String input = "HAHAAHHHAAHA";


    }
    
    private static int caminoAlSur(String instrucciones) {
	
	Robot bot = new Robot();
	char[] caracteres = instrucciones.toCharArray();
	
	for(int i=0; i<instrucciones.length(); i++) {
	    int nuevaDir = (caracteres[i] == 'H') ? bot.moverHorario() : bot.moverAntihorario;
	    if(nuevaDir == Direccion.SUR)
		return i;
	}
    }

}
